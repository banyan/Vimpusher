<article>

<div class="container clearfix">

  <div class="grid6 first">
    <h2>Popular plugins</h2>
    <table class="plugin">
      <tr>
        <th></th>
        <th></th>
        <th></th>
      </tr>

    <% @popular.each_with_index do |group, i| %>
      <tr>
        <td><%= i + 1 %></td>
        <td><%= link_to group.url, plugin_path(group.id) %></td>
        <td><%= group.count_plugins %></td>
      </tr>
    <% end %>
    </table>
  </div>

  <div class="grid6">
    <h2>Recent added plugins</h2>
    <table class="plugin">
      <tr>
        <th></th>
      </tr>

    <% @recent.each do |group| %>
      <tr>
        <td><%= link_to group.url, plugin_path(group.id) %></td>
      </tr>
    <% end %>
    </table>
  </div>

</div>

</article>
